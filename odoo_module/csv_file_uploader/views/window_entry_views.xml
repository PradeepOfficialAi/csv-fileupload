<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_window_entry_record_list" model="ir.ui.view">
        <field name="name">window.entry.record.list</field>
        <field name="model">window.entry.record</field>
        <field name="arch" type="xml">
            <list string="Window Entry">
                <field name="order_number"/>
                <field name="quotation_number"/>
                <field name="windows_qty"/>
                <field name="line_qty"/>
                <field name="opening_qty"/>
                <field name="user_name"/>
                <field name="upload_id"/>
            </list>
        </field>
    </record>

    <record id="view_window_entry_record_form" model="ir.ui.view">
        <field name="name">window.entry.record.form</field>
        <field name="model">window.entry.record</field>
        <field name="arch" type="xml">
            <form string="Window Entry Row">
                <sheet>
                    <group col="2">
                        <field name="upload_id"/>
                        <field name="order_number"/>
                        <field name="quotation_number"/>
                        <field name="windows_qty"/>
                        <field name="line_qty"/>
                        <field name="opening_qty"/>
                        <field name="user_name"/>
                        <field name="order_date"/>
                        <field name="system"/>
                        <field name="output_date"/>
                        <field name="dealer_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
