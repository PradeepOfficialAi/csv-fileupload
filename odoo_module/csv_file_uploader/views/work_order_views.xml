<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_work_order_record_list" model="ir.ui.view">
        <field name="name">work.order.record.list</field>
        <field name="model">work.order.record</field>
        <field name="arch" type="xml">
            <list string="Work Orders">
                <field name="order_number"/>
                <field name="po"/>
                <field name="dealer"/>
                <field name="order_date"/>
                <field name="due_date"/>
                <field name="qty"/>
                <field name="upload_id"/>
            </list>
        </field>
    </record>

    <record id="view_work_order_record_form" model="ir.ui.view">
        <field name="name">work.order.record.form</field>
        <field name="model">work.order.record</field>
        <field name="arch" type="xml">
            <form string="Work Order">
                <sheet>
                    <group>
                        <group>
                            <field name="upload_id"/>
                            <field name="order_number"/>
                            <field name="po"/>
                            <field name="tag"/>
                            <field name="dealer"/>
                            <field name="qty"/>
                        </group>
                        <group>
                            <field name="order_date"/>
                            <field name="due_date"/>
                            <field name="line_reference"/>
                            <field name="note" widget="text"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descriptions">
                            <group>
                                <field name="window_description" widget="text"/>
                                <field name="description" widget="text"/>
                                <field name="options" widget="text"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_work_order_alt_record_list" model="ir.ui.view">
        <field name="name">work.order.alternate.record.list</field>
        <field name="model">work.order.alternate.record</field>
        <field name="arch" type="xml">
            <list string="Work Orders 2">
                <field name="order_number"/>
                <field name="po"/>
                <field name="dealer"/>
                <field name="order_date"/>
                <field name="due_date"/>
                <field name="qty"/>
                <field name="upload_id"/>
            </list>
        </field>
    </record>

    <record id="view_work_order_alt_record_form" model="ir.ui.view">
        <field name="name">work.order.alternate.record.form</field>
        <field name="model">work.order.alternate.record</field>
        <field name="arch" type="xml">
            <form string="Work Order (Alt)">
                <sheet>
                    <group>
                        <group>
                            <field name="upload_id"/>
                            <field name="order_number"/>
                            <field name="po"/>
                            <field name="tag"/>
                            <field name="dealer"/>
                            <field name="qty"/>
                        </group>
                        <group>
                            <field name="order_date"/>
                            <field name="due_date"/>
                            <field name="line_reference"/>
                            <field name="note" widget="text"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descriptions">
                            <group>
                                <field name="window_description" widget="text"/>
                                <field name="description" widget="text"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
