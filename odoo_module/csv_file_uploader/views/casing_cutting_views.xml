<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_casing_cutting_record_list" model="ir.ui.view">
        <field name="name">casing.cutting.record.list</field>
        <field name="model">casing.cutting.record</field>
        <field name="arch" type="xml">
            <list string="Casing Cutting">
                <field name="order_ref"/>
                <field name="order_line"/>
                <field name="material"/>
                <field name="label"/>
                <field name="window_name"/>
                <field name="windows_size"/>
                <field name="company"/>
                <field name="order_date"/>
            </list>
        </field>
    </record>

    <record id="view_casing_cutting_record_form" model="ir.ui.view">
        <field name="name">casing.cutting.record.form</field>
        <field name="model">casing.cutting.record</field>
        <field name="arch" type="xml">
            <form string="Casing Cutting Row">
                <sheet>
                    <group col="2">
                        <field name="upload_id"/>
                        <field name="hw"/>
                        <field name="bin_code"/>
                        <field name="order_line"/>
                        <field name="material"/>
                        <field name="label"/>
                        <field name="order_ref"/>
                        <field name="window_name"/>
                        <field name="windows_size"/>
                        <field name="rossette"/>
                        <field name="casing_line"/>
                        <field name="company"/>
                        <field name="po"/>
                        <field name="order_date"/>
                        <field name="order_time"/>
                        <field name="user_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
